---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import LocationTile from '../components/LocationTile.astro';

// Placeholder data - To be replaced with resume content
const experience = [
  {
    role: "Senior Software Engineer",
    company: "Tech Giant Corp",
    period: "2023 - Present",
    desc: "Leading backend architecture and scaling distributed systems."
  },
  {
    role: "Software Engineer",
    company: "Innovative Startup",
    period: "2021 - 2023",
    desc: "Built full-stack features and optimized CI/CD pipelines."
  }
];

const projects = [
  {
    title: "Portfolio Website",
    tech: ["Astro", "Tailwind", "React"],
    desc: "A performant, dark-themed portfolio website inspired by modern design trends."
  },
  {
    title: "Market Whisperer",
    tech: ["python", "AI", "FastAPI"],
    desc: "AI-powered market analysis tool providing sentiment insights."
  }
];
---

<Layout title="Aparna | Portfolio">
  
  <!-- Hero Section -->
  <section class="mb-20 pt-10">
    <div class="grid gap-6">
      <!-- Main Status/Location Tile -->
      <LocationTile />
      
      <!-- Bio & CTAs -->
      <div class="reveal mt-4">
        <!-- Profile Image - Centered and Prominent -->
        <div class="flex justify-center mb-8">
          <div class="w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-4 border-white/20 shadow-2xl bg-gray-900">
            <img 
              src="/profile-photo.jpg" 
              alt="Aparna" 
              class="w-full h-full object-cover"
            />
          </div>
        </div>
        
        <!-- Bio Text - Centered -->
        <div class="text-center">
          <p class="text-secondary max-w-2xl text-lg leading-relaxed mx-auto">
            I'm <span class="text-primary font-semibold">Aparna</span>, a developer passionate about building scalable software and intuitive user interfaces. 
            Currently specializing in Python backend systems and modern web technologies.
          </p>
        </div>
        
        <div class="flex flex-wrap gap-4">
          <a href="#contact" class="px-8 py-4 bg-primary text-background font-bold rounded-full hover:scale-105 transition-transform">
            Contact Me
          </a>
          <a href="#projects" class="px-8 py-4 border border-primary/20 rounded-full hover:border-accent hover:text-accent transition-all">
            View Work
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Vertical Connector -->
  <div class="flex justify-center mb-20">
    <div class="w-[1px] h-20 bg-gradient-to-b from-accent/50 to-transparent"></div>
  </div>

  <script>
    const updateGreeting = () => {
      const greetingEl = document.getElementById('dynamic-greeting');
      if (!greetingEl) return;
      
      const hour = new Date().getHours();
      let message = "Software Engineer";
      
      if (hour < 12) message = "Good Morning â˜€ï¸";
      else if (hour < 18) message = "Good Afternoon ðŸ‘‹";
      else message = "Good Evening ðŸŒ™";
      
      greetingEl.innerText = message;
    };

    updateGreeting();
    document.addEventListener('astro:after-swap', updateGreeting);
  </script>

  <!-- Experience Section -->
  <section id="experience" class="mb-32 scroll-mt-32 reveal">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Experience</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>
    
    <div class="grid gap-6">
      {experience.map(job => (
        <Card>
          <div class="flex flex-col md:flex-row md:items-center justify-between mb-2">
            <h3 class="text-xl font-bold text-white group-hover:text-accent transition-colors">{job.role}</h3>
            <span class="text-sm text-secondary bg-white/5 px-3 py-1 rounded-full">{job.period}</span>
          </div>
          <p class="text-accent mb-4 font-medium">{job.company}</p>
          <p class="text-secondary leading-relaxed">
            {job.desc}
          </p>
        </Card>
      ))}
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="mb-32 scroll-mt-32 reveal">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Featured Projects</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {projects.map(project => (
        <Card href="#" class="h-full flex flex-col">
          <h3 class="text-xl font-bold mb-2 group-hover:text-accent transition-colors">{project.title}</h3>
          <p class="text-secondary mb-6 flex-grow">{project.desc}</p>
          <div class="flex flex-wrap gap-2 mt-auto">
            {project.tech.map(t => (
              <span class="text-xs font-mono text-accent/80 bg-accent/10 px-2 py-1 rounded border border-accent/20">
                {t}
              </span>
            ))}
          </div>
        </Card>
      ))}
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="mb-32 scroll-mt-32 reveal">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Skills</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
      {[
        { name: "Python", icon: "ðŸ" },
        { name: "FastAPI", icon: "âš¡" },
        { name: "Astro", icon: "ðŸš€" },
        { name: "React", icon: "âš›ï¸" },
        { name: "Docker", icon: "ðŸ‹" },
        { name: "ML", icon: "ðŸ¤–" },
        { name: "System Design", icon: "ðŸ—ï¸" },
        { name: "Tailwind", icon: "ðŸŽ¨" },
        { name: "Git", icon: "ðŸŒ¿" },
        { name: "PostgreSQL", icon: "ðŸ˜" }
      ].map(skill => (
        <div class="group flex flex-col items-center p-4 bg-white/5 rounded-2xl border border-white/10 hover:border-accent hover:bg-accent/5 transition-all duration-300 interactive cursor-default hover:-translate-y-1">
          <span class="text-2xl mb-2 group-hover:scale-110 transition-transform">{skill.icon}</span>
          <span class="text-sm font-medium text-secondary group-hover:text-primary transition-colors">
            {skill.name}
          </span>
        </div>
      ))}
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="mb-20 scroll-mt-32 text-center reveal">
    <h2 class="text-3xl font-bold mb-6">Get In Touch</h2>
    <p class="text-secondary mb-8 max-w-lg mx-auto">
      I'm always open to discussing new projects, creative ideas, or opportunities to be part of your visions.
    </p>
    <a href="mailto:hello@aparna.dev" class="inline-block px-8 py-4 bg-accent text-black font-bold rounded-full hover:bg-accent/90 transition-transform hover:scale-105">
      Say Hello
    </a>
  </section>

</Layout>
