<Layout title="Aparna | Portfolio">
  <!-- Hero Section -->
  <section class="mb-8 pt-10">
    <div class="grid gap-6">
      <!-- Main Status/Location Tile -->
      <LocationTile />

      <!-- Bio & CTAs -->
      <div class="reveal mt-4">
        <!-- Bio Text - Centered -->
        <div class="text-center">
          <p class="text-secondary max-w-2xl text-lg leading-relaxed mx-auto">
            I describe myself as a fanatical coder fueled by curiosity. What
            began as a self-taught journey has evolved into 5+ years of
            engineering experienceâ€”architecting high-performance backend
            systems, real-time data engines, and large-scale APIs, while
            actively contributing to open-source.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Vertical Connector -->
  <div class="flex justify-center mb-8">
    <div class="w-[1px] h-10 bg-gradient-to-b from-accent/50 to-transparent">
    </div>
  </div>

  <script>
    const updateGreeting = () => {
      const greetingEl = document.getElementById("dynamic-greeting");
      if (!greetingEl) return;

      const hour = new Date().getHours();
      let message = "Software Engineer";

      if (hour < 12) message = "Good Morning â˜€ï¸";
      else if (hour < 18) message = "Good Afternoon ğŸ‘‹";
      else message = "Good Evening ğŸŒ™";

      greetingEl.innerText = message;
    };

    updateGreeting();
    document.addEventListener("astro:after-swap", updateGreeting);
  </script>

  <!-- Experience Section -->
  <section id="experience" class="mb-32 scroll-mt-32 reveal">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Experience</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>

    <div class="grid gap-6">
      {
        experience.map((job) => (
          <Card>
            <div class="flex flex-col md:flex-row md:items-center justify-between mb-2">
              <h3 class="text-xl font-bold text-white group-hover:text-accent transition-colors">
                {job.role}
              </h3>
              <span class="text-sm text-secondary bg-white/5 px-3 py-1 rounded-full">
                {job.period}
              </span>
            </div>
            <p class="text-accent mb-4 font-medium">{job.company}</p>
            <p class="text-secondary leading-relaxed">{job.desc}</p>
          </Card>
        ))
      }
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="mb-32 scroll-mt-32 reveal">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Featured Projects</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {
        projects.map((project) => (
          <Card href="#" class="h-full flex flex-col">
            <h3 class="text-xl font-bold mb-2 group-hover:text-accent transition-colors">
              {project.title}
            </h3>
            <p class="text-secondary mb-6 flex-grow">{project.desc}</p>
            <div class="flex flex-wrap gap-2 mt-auto">
              {project.tech.map((t) => (
                <span class="text-xs font-mono text-accent/80 bg-accent/10 px-2 py-1 rounded border border-accent/20">
                  {t}
                </span>
              ))}
            </div>
          </Card>
        ))
      }
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="mb-32 scroll-mt-32 reveal">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Skills</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>
    <div class="space-y-12">
      {
        skillCategories.map((category) => (
          <div>
            <h3 class="text-xl font-bold mb-6 text-accent pl-2 border-l-2 border-accent">
              {category.title}
            </h3>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
              {category.skills.map((skill) => (
                <div class="group flex flex-col items-center p-4 bg-white/5 rounded-2xl border border-white/10 hover:border-accent hover:bg-accent/5 transition-all duration-300 interactive cursor-default hover:-translate-y-1">
                  <span class="text-2xl mb-2 group-hover:scale-110 transition-transform">
                    {skill.icon}
                  </span>
                  <span class="text-sm font-medium text-secondary group-hover:text-primary transition-colors text-center">
                    {skill.name}
                  </span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="mb-20 scroll-mt-32 text-center reveal">
    <h2 class="text-3xl font-bold mb-6">Get In Touch</h2>
    <p class="text-secondary mb-8 max-w-lg mx-auto">
      I'm always open to discussing new projects, creative ideas, or
      opportunities to be part of your visions.
    </p>
    <a
      href="mailto:aparna.mane1998@gmail.com"
      class="inline-block px-8 py-4 bg-accent text-black font-bold rounded-full hover:bg-accent/90 transition-transform hover:scale-105"
    >
      Say Hello
    </a>
  </section>
</Layout>
