---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

// Placeholder data - To be replaced with resume content
const experience = [
  {
    role: "Senior Software Engineer",
    company: "Tech Giant Corp",
    period: "2023 - Present",
    desc: "Leading backend architecture and scaling distributed systems."
  },
  {
    role: "Software Engineer",
    company: "Innovative Startup",
    period: "2021 - 2023",
    desc: "Built full-stack features and optimized CI/CD pipelines."
  }
];

const projects = [
  {
    title: "Portfolio Website",
    tech: ["Astro", "Tailwind", "React"],
    desc: "A performant, dark-themed portfolio website inspired by modern design trends."
  },
  {
    title: "Market Whisperer",
    tech: ["python", "AI", "FastAPI"],
    desc: "AI-powered market analysis tool providing sentiment insights."
  }
];
---

<Layout title="Aparna | Portfolio">
  
  <!-- Hero Section -->
  <section class="min-h-[60vh] flex flex-col justify-center mb-20">
    <div class="space-y-4">
      <span class="text-accent font-medium tracking-wider text-sm uppercase">Software Engineer</span>
      <h1 class="text-5xl md:text-7xl font-bold leading-tight">
        Building digital <br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-500">experiences</span> that matter.
      </h1>
      <p class="text-secondary max-w-xl text-lg leading-relaxed pt-4">
        Iâ€™m Aparna, a developer passionate about building scalable software and intuitive user interfaces. 
        Currently mostly working with Python and web technologies.
      </p>
      
      <div class="flex gap-4 pt-8">
        <a href="#contact" class="px-6 py-3 bg-white text-black font-bold rounded-lg hover:bg-gray-200 transition-colors">
          Contact Me
        </a>
        <a href="#projects" class="px-6 py-3 border border-white/20 rounded-lg hover:border-accent hover:text-accent transition-colors">
          View Work
        </a>
      </div>
    </div>
  </section>

  <!-- Experience Section -->
  <section id="experience" class="mb-32 scroll-mt-24">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Experience</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>
    
    <div class="grid gap-6">
      {experience.map(job => (
        <Card>
          <div class="flex flex-col md:flex-row md:items-center justify-between mb-2">
            <h3 class="text-xl font-bold text-white group-hover:text-accent transition-colors">{job.role}</h3>
            <span class="text-sm text-secondary bg-white/5 px-3 py-1 rounded-full">{job.period}</span>
          </div>
          <p class="text-accent mb-4 font-medium">{job.company}</p>
          <p class="text-secondary leading-relaxed">
            {job.desc}
          </p>
        </Card>
      ))}
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="mb-32 scroll-mt-24">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Featured Projects</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6">
      {projects.map(project => (
        <Card href="#" class="h-full flex flex-col">
          <h3 class="text-xl font-bold mb-2 group-hover:text-accent transition-colors">{project.title}</h3>
          <p class="text-secondary mb-6 flex-grow">{project.desc}</p>
          <div class="flex flex-wrap gap-2 mt-auto">
            {project.tech.map(t => (
              <span class="text-xs font-mono text-accent/80 bg-accent/10 px-2 py-1 rounded border border-accent/20">
                {t}
              </span>
            ))}
          </div>
        </Card>
      ))}
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="mb-32 scroll-mt-24">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold">Skills</h2>
      <div class="h-[1px] bg-white/10 flex-grow ml-6"></div>
    </div>
    <div class="flex flex-wrap gap-4">
      {["Python", "FastAPI", "Astro", "React", "Docker", "Machine Learning", "System Design"].map(skill => (
        <span class="px-4 py-2 bg-white/5 rounded-full border border-white/10 text-secondary hover:text-accent hover:border-accent transition-colors cursor-default">
          {skill}
        </span>
      ))}
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="mb-20 scroll-mt-24 text-center">
    <h2 class="text-3xl font-bold mb-6">Get In Touch</h2>
    <p class="text-secondary mb-8 max-w-lg mx-auto">
      I'm always open to discussing new projects, creative ideas, or opportunities to be part of your visions.
    </p>
    <a href="mailto:hello@aparna.dev" class="inline-block px-8 py-4 bg-accent text-black font-bold rounded-full hover:bg-accent/90 transition-transform hover:scale-105">
      Say Hello
    </a>
  </section>

</Layout>
